{
  "manifest_version": 2,

  "name": "Bookmark Stack",
  "description": "inspired by view later",
  "version": "1.0",

  "browser_action": {
    "default_title": "Bookmark Stack",
    "default_popup": "stack.html"
  },

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "background": {
    "scripts": [
      "shared.js",
      "bg.js"
    ],
    "persistent": true
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "contextMenus",
    "chrome://favicon/"
  ]
}
